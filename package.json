{
	"name": "svelte-shy-header",
	"version": "0.0.1",
	"license": "BSD-3-Clause",
	"description": "Svelte shy header: how to add a vanishing, sticky peekaboo header that reappears when the user scrolls up using Svelte and CSS to your site.",
	"scripts": {
		"dev": "vite dev --port 3000",
		"build": "vite build",
		"package": "svelte-kit package",
		"preview": "vite preview --port 3000",
		"check": "svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --check --plugin-search-dir=. . && eslint .",
		"lint:css": "stylelint \"src/**/*.{css,svelte}\"",
		"prettier:check": "prettier --check --plugin-search-dir=. .",
		"format": "prettier --write --plugin-search-dir=. ."
	},
	"devDependencies": {
		"@commitlint/config-conventional": "^17.0.3",
		"@fontsource/playfair-display": "^4.5.10",
		"@sveltejs/adapter-static": "1.0.0-next.38",
		"@sveltejs/kit": "next",
		"@typescript-eslint/eslint-plugin": "^5.27.0",
		"@typescript-eslint/parser": "^5.27.0",
		"commitlint": "^17.0.3",
		"eslint": "^8.16.0",
		"eslint-config-prettier": "^8.3.0",
		"eslint-plugin-svelte3": "^4.0.0",
		"husky": "^8.0.1",
		"postcss-html": "^1.5.0",
		"prettier": "^2.6.2",
		"prettier-plugin-svelte": "^2.7.0",
		"stylelint": "^14.9.1",
		"stylelint-config-recommended": "^8.0.0",
		"stylelint-config-standard": "^26.0.0",
		"svelte": "^3.44.0",
		"svelte-check": "^2.7.1",
		"svelte-preprocess": "^4.10.6",
		"tslib": "^2.3.1",
		"typescript": "^4.7.4",
		"vite": "^3.0.0"
	},
	"type": "module",
	"repository": {
		"type": "git",
		"url": "https://github.com/rodneylab/svelte-shy-header"
	},
	"bugs": {
		"url": "https://github.com/rodneylab/svelte-shy-header/issues"
	}
}
