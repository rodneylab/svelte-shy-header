{
	"name": "svelte-shy-header",
	"version": "0.0.1",
	"license": "BSD-3-Clause",
	"description": "Svelte shy header: how to add a vanishing, sticky peekaboo header that reappears when the user scrolls up using Svelte and CSS to your site.",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"check": "svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --check --plugin-search-dir=. . && eslint .",
		"lint:css": "stylelint \"src/**/*.{css,svelte}\"",
		"prettier:check": "prettier --check --plugin-search-dir=. .",
		"format": "prettier --write --plugin-search-dir=. ."
	},
	"devDependencies": {
		"@commitlint/config-conventional": "^17.3.0",
		"@fontsource/playfair-display": "^4.5.12",
		"@sveltejs/adapter-static": "1.0.0-next.48",
		"@sveltejs/kit": "next",
		"@typescript-eslint/eslint-plugin": "^5.44.0",
		"@typescript-eslint/parser": "^5.44.0",
		"commitlint": "^17.3.0",
		"eslint": "^8.28.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-plugin-svelte3": "^4.0.0",
		"husky": "^8.0.2",
		"postcss-html": "^1.5.0",
		"prettier": "^2.8.0",
		"prettier-plugin-svelte": "^2.8.1",
		"stylelint": "^14.15.0",
		"stylelint-config-recommended": "^9.0.0",
		"stylelint-config-standard": "^29.0.0",
		"svelte": "^3.53.1",
		"svelte-check": "^2.9.2",
		"svelte-preprocess": "^4.10.7",
		"tslib": "^2.4.1",
		"typescript": "^4.9.3",
		"vite": "^3.2.4"
	},
	"type": "module",
	"repository": {
		"type": "git",
		"url": "https://github.com/rodneylab/svelte-shy-header"
	},
	"bugs": {
		"url": "https://github.com/rodneylab/svelte-shy-header/issues"
	}
}
