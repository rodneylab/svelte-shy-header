{
	"name": "svelte-shy-header",
	"version": "0.0.1",
	"license": "BSD-3-Clause",
	"description": "Svelte shy header: how to add a vanishing, sticky peekaboo header that reappears when the user scrolls up using Svelte and CSS to your site.",
	"scripts": {
		"dev": "vite dev",
		"run": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"check": "svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --check --plugin-search-dir=. . && eslint .",
		"lint:css": "stylelint \"src/**/*.{css,svelte}\"",
		"prettier:check": "prettier --check --plugin-search-dir=. .",
		"format": "prettier --write --plugin-search-dir=. ."
	},
	"devDependencies": {
		"@commitlint/config-conventional": "^17.6.6",
		"@fontsource/playfair-display": "^5.0.5",
		"@sveltejs/adapter-static": "2.0.2",
		"@sveltejs/kit": "^1.22.3",
		"@typescript-eslint/eslint-plugin": "^6.0.0",
		"@typescript-eslint/parser": "^6.0.0",
		"commitlint": "^17.6.6",
		"eslint": "^8.44.0",
		"eslint-config-prettier": "^8.8.0",
		"eslint-plugin-svelte": "^2.32.2",
		"husky": "^8.0.3",
		"postcss-html": "^1.5.0",
		"prettier": "^2.8.8",
		"prettier-plugin-svelte": "^2.10.1",
		"stylelint": "^15.10.1",
		"stylelint-config-recommended": "^13.0.0",
		"stylelint-config-standard": "^34.0.0",
		"svelte": "^4.0.5",
		"svelte-check": "^3.4.6",
		"svelte-preprocess": "^5.0.4",
		"tslib": "^2.6.0",
		"typescript": "^5.1.6",
		"vite": "^4.4.3"
	},
	"type": "module",
	"repository": {
		"type": "git",
		"url": "https://github.com/rodneylab/svelte-shy-header"
	},
	"bugs": {
		"url": "https://github.com/rodneylab/svelte-shy-header/issues"
