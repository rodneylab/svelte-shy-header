{
	"name": "svelte-shy-header",
	"version": "0.0.1",
	"license": "BSD-3-Clause",
	"description": "Svelte shy header: how to add a vanishing, sticky peekaboo header that reappears when the user scrolls up using Svelte and CSS to your site.",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"check": "svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --check --plugin-search-dir=. . && eslint .",
		"lint:css": "stylelint \"src/**/*.{css,svelte}\"",
		"prettier:check": "prettier --check --plugin-search-dir=. .",
		"format": "prettier --write --plugin-search-dir=. ."
	},
	"devDependencies": {
		"@commitlint/config-conventional": "^17.4.4",
		"@fontsource/playfair-display": "^4.5.13",
		"@sveltejs/adapter-static": "2.0.1",
		"@sveltejs/kit": "^1.11.0",
		"@typescript-eslint/eslint-plugin": "^5.55.0",
		"@typescript-eslint/parser": "^5.55.0",
		"commitlint": "^17.4.4",
		"eslint": "^8.36.0",
		"eslint-config-prettier": "^8.7.0",
		"eslint-plugin-svelte3": "^4.0.0",
		"husky": "^8.0.3",
		"postcss-html": "^1.5.0",
		"prettier": "^2.8.4",
		"prettier-plugin-svelte": "^2.9.0",
		"stylelint": "^15.2.0",
		"stylelint-config-recommended": "^10.0.1",
		"stylelint-config-standard": "^30.0.1",
		"svelte": "^3.56.0",
		"svelte-check": "^3.1.4",
		"svelte-preprocess": "^5.0.2",
		"tslib": "^2.5.0",
		"typescript": "^4.9.5",
		"vite": "^4.1.4"
	},
	"type": "module",
	"repository": {
		"type": "git",
		"url": "https://github.com/rodneylab/svelte-shy-header"
	},
	"bugs": {
		"url": "https://github.com/rodneylab/svelte-shy-header/issues"
	}
}
