{
	"name": "svelte-shy-header",
	"version": "0.0.1",
	"license": "BSD-3-Clause",
	"description": "Svelte shy header: how to add a vanishing, sticky peekaboo header that reappears when the user scrolls up using Svelte and CSS to your site.",
	"scripts": {
		"dev": "vite dev",
		"run": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"check": "svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --check --plugin=prettier-plugin-svelte . && eslint .",
		"lint:css": "stylelint \"src/**/*.{css,svelte}\"",
		"check:formatting": "prettier --check --plugin=prettier-plugin-svelte .",
		"format": "prettier --write --plugin-search-dir=. ."
	},
	"devDependencies": {
		"@commitlint/config-conventional": "^18.6.2",
		"@fontsource/playfair-display": "^5.0.20",
		"@sveltejs/adapter-static": "3.0.1",
		"@sveltejs/kit": "^2.5.0",
		"@sveltejs/vite-plugin-svelte": "^3.0.2",
		"@typescript-eslint/eslint-plugin": "^7.0.2",
		"@typescript-eslint/parser": "^7.0.2",
		"commitlint": "^18.6.1",
		"eslint": "^8.56.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-svelte": "^2.35.1",
		"husky": "^9.0.11",
		"postcss-html": "^1.6.0",
		"prettier": "^3.2.5",
		"prettier-plugin-svelte": "^3.2.1",
		"stylelint": "^16.2.1",
		"stylelint-config-recommended": "^14.0.0",
		"stylelint-config-standard": "^36.0.0",
		"svelte": "^4.2.11",
		"svelte-check": "^3.6.4",
		"svelte-preprocess": "^5.1.3",
		"tslib": "^2.6.2",
		"typescript": "^5.3.3",
		"vite": "^5.1.3"
	},
	"type": "module",
	"repository": {
		"type": "git",
		"url": "https://github.com/rodneylab/svelte-shy-header"
	},
	"bugs": {
		"url": "https://github.com/rodneylab/svelte-shy-header/issues"
	}
}
